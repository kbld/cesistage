{% extends "base/base.twig" %}

{% block title %}CESI - Vos favoris{% endblock %}

{% block style %}
<link rel="stylesheet" href="/static/css/favoris.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
{% endblock %}

{% block content %}
<content>
    <div id="1">
        <span class="fa fa-star" onclick="change(1, '1')" id="_1"></span>
        <span class="fa fa-star" onclick="change(2, '1')" id="_2"></span>
        <span class="fa fa-star" onclick="change(3, '1')" id="_3"></span>
        <span class="fa fa-star" onclick="change(4, '1')" id="_4"></span>
        <span class="fa fa-star" onclick="change(5, '1')" id="_5"></span>
    </div>
    <div id="0">
        <span class="fa fa-star" onclick="change(1, '0')" id="_1"></span>
        <span class="fa fa-star" onclick="change(2, '0')" id="_2"></span>
        <span class="fa fa-star" onclick="change(3, '0')" id="_3"></span>
        <span class="fa fa-star" onclick="change(4, '0')" id="_4"></span>
        <span class="fa fa-star" onclick="change(5, '0')" id="_5"></span>
    </div>
</content>
</div>
{% endblock %}

{% block scripts %}
<script src="/static/js/favoris.js"></script>
{% endblock %}
