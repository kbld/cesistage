    <option value="emploi">Emploi</option>
    <option value="alternance">Alternance</option>
</select>


        <label class="titlemainfiles" for="fileUpload" required="">Description bréve de l'offre :</label><br>
       <textarea class="inputpdf" autocomplete="off" type="text" required="" name="titre"></textarea><br><br>


			<input class="btnsave" autocomplete="off" type="submit" name="submit" value="Publiez votre offre">
